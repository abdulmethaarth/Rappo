<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui_activity.SuccessActivity">

    <RelativeLayout
        android:id="@+id/rl_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        android:background="@drawable/screen_bg">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:src="@drawable/logowhite"/>

        <ImageView
            android:id="@+id/side_menu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/side_menu_iocn"/>

        <!--  Side menu -->
        <LinearLayout
            android:id="@+id/side_menu_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:orientation="vertical">
            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="10dp"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="30dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/prof_img"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:src="@drawable/user_color_icon"
                            android:layout_marginTop="30dp"/>

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vedanta"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:textSize="30dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#123455"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:textSize="16dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Senior Print Service Engineer "
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:textSize="16dp"
                            />

                        <TextView
                            android:id="@+id/mob_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+966 454 789654"
                            android:textColor="@color/black"
                            android:layout_marginTop="20dp"
                            android:drawablePadding="5dp"
                            android:drawableRight="@drawable/pencil_icon"
                            android:textSize="16dp"/>

                        <TextView
                            android:id="@+id/mail_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="printpack@sinmarglobal.com"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:drawablePadding="5dp"
                            android:drawableRight="@drawable/pencil_icon"
                            android:textSize="16dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="50dp"
                            android:layout_marginBottom="30dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/share"
                                android:layout_width="50dp"
                                android:layout_height="30dp"
                                app:srcCompat="@drawable/ic_outline_share_24"/>

                            <ImageView
                                android:id="@+id/logout_img"
                                android:layout_width="50dp"
                                android:layout_height="30dp"
                                app:srcCompat="@drawable/logout_img"/>

                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/create_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:src="@drawable/sucess_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUCCESS!"
                android:textColor="@color/white"
                android:textSize="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SERVICE REPORT #"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/rno_No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABCEDEF!@$"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:textSize="25dp"/>


        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="top"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/li_back_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:src="@drawable/bottom_back_icon"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/li_home_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_btn"
                android:layout_weight="1"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:src="@drawable/bottom_home"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/li_setting_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            >

            <ImageView
                android:id="@+id/setting_btn"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:src="@drawable/bottom_settings"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>