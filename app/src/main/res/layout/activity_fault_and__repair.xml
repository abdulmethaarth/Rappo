<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui_activity.Fault_and_RepairActivity">

    <RelativeLayout
       android:id="@+id/rl_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        android:background="@drawable/screen_bg">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:src="@drawable/logowhite"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_outline_border">

            <TextView
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/save_continue"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Save &amp; Continue"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="16dp"

                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/side_menu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/side_menu_iocn"/>

        <!--  Side menu -->
        <LinearLayout
            android:id="@+id/side_menu_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:orientation="vertical">
            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="10dp"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="30dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/prof_img"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:src="@drawable/user_color_icon"
                            android:layout_marginTop="30dp"/>

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vedanta"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:textSize="30dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#123455"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:textSize="16dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Senior Print Service Engineer "
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:textSize="16dp"
                            />

                        <TextView
                            android:id="@+id/mob_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+966 454 789654"
                            android:textColor="@color/black"
                            android:layout_marginTop="20dp"
                            android:drawablePadding="5dp"
                            android:drawableRight="@drawable/pencil_icon"
                            android:textSize="16dp"/>

                        <TextView
                            android:id="@+id/mail_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="printpack@sinmarglobal.com"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:drawablePadding="5dp"
                            android:drawableRight="@drawable/pencil_icon"
                            android:textSize="16dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="50dp"
                            android:layout_marginBottom="30dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/share"
                                android:layout_width="50dp"
                                android:layout_height="30dp"
                                app:srcCompat="@drawable/ic_outline_share_24"/>

                            <ImageView
                                android:id="@+id/logout_img"
                                android:layout_width="50dp"
                                android:layout_height="30dp"
                                app:srcCompat="@drawable/logout_img"/>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/side_menu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_above="@+id/if_others_edt"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Fault &amp; Repairs Completed"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:textSize="16dp"/>

            <android.support.v7.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/rounded_border_background"
                app:cardCornerRadius="60dp"
                android:layout_alignParentRight="true"
                app:cardElevation="2dp">

                <TextView
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/cvtEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/black"
                    android:text=" 3 "
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold" />

            </android.support.v7.widget.CardView>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/line_icon"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/check_add_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:layout_below="@+id/feedbackPlansCheckBoxLL"
                    android:orientation="vertical" >
                    <!--
                        Required to Add CheckBoxes Here Dynamically
                    -->
                </LinearLayout>

                <CheckBox
                    android:id="@+id/chckbox_other"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:text="Others"
                    android:paddingLeft="17dp"
                    android:textSize="16dp"
                    android:layout_marginLeft="25dp"
                    android:button="@drawable/check_box_selector"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"/>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <EditText
            android:visibility="gone"
            android:id="@+id/if_others_edt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rounded_border_background"
            android:layout_marginLeft="20dp"
            android:text="If others"
            android:layout_toLeftOf="@+id/close_btn"
            android:textColor="@color/black"
            android:paddingLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/close_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/close_btn"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            />
    </RelativeLayout>

